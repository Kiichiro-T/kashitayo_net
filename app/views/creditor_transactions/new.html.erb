<%= form_for(@transaction, url: creditor_transactions_path) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
  
      <%= f.hidden_field :debtor_id, :value => current_user.id %>
  
      <%= f.label :creditor_id, "借りる相手" %> <br />
      <%= f.select :creditor_id,
            options_from_collection_for_select(User.where.not(id: current_user.id), :id, :name),
            {
            class: "form-control", :prompt => "選択できます"
            } 
      %><br />
  
      <%= f.label :debt, "金額" %> <br />
      <%= f.number_field :debt, class: "form-control" %> <br />
      
      <%#= f.label :repayment, "返済済みかどうか" %> <br />
      <%#= f.check_box :repayment, {}, "true", "false"  %> <br />
  
      <%= f.submit "作成"%>
    </div>
  <% end %>